<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_white_1000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue_main_dark"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvTitleAddScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Покупки на выходные"
            android:textSize="22sp"
            android:textColor="@color/md_white_1000"/>

        <TextView
            android:id="@+id/tvTitleTypeAddScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Продукты"
            android:textSize="16sp"
            android:textColor="@color/md_white_1000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Наименование товара"
            android:id="@+id/textView3"
            android:textColor="@color/blue_main_dark"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:inputType="textImeMultiLine"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Количество товара:"
            android:id="@+id/textView4"
            android:textColor="@color/blue_main_dark"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText4"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:layout_marginTop="5dp"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:background="@color/blue_main"/>
    </LinearLayout>

</LinearLayout>