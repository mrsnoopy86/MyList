<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/blue_main"
        android:id="@+id/linearLayout"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Покупки на неделю"
            android:id="@+id/textView3"
            android:textColor="@color/blue_main_dark"
            android:textSize="22sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Надо скупиться на неделю и не забыть купить малому ..."
            android:id="@+id/textView4"
            android:textColor="@color/md_grey_500"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Продукты"
            android:id="@+id/textView5"
            android:textSize="16sp"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Важно"
            android:id="@+id/textView6"
            android:textColor="@color/blue_main_dark"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Не забыть"
            android:id="@+id/textView7"
            android:textColor="@color/blue_main_dark"
            android:layout_below="@+id/textView6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сегодня"
            android:id="@+id/textView8"
            android:textColor="@color/blue_main_dark"
            android:layout_below="@+id/textView7" />
    </RelativeLayout>

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="android.support.design.widget.FloatingActionButton"
        android:id="@+id/view"
        android:background="@drawable/floating"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-30dp"
        android:layout_marginRight="33dp"
        android:src="@drawable/ic_done_black_24dp" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="android.support.design.widget.FloatingActionButton"
        android:id="@+id/view2"
        android:background="@drawable/floating"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="33dp"
        android:src="@drawable/ic_clear_black_24dp"/>

</RelativeLayout>